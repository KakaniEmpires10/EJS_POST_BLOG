<%- include ('Partial/header') %> 
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="What is on your mind?">
    </div>

    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" name="postText" id="post" cols="40" rows="5"></textarea>
    </div>
    <button class="btn btn-md btn-primary" type="submit" name="pbutton">Publish</button>
</form>

